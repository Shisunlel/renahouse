<%- include('../partials/header') %>
<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center p-2">Edit Comment</h1>
    </div>
    <div class="col-12">
      <div id="form-input">
        <!--30%-->
        <form
          action="/house/<%= house_id %>/comments/<%= comment._id %>?_method=PUT"
          method="POST"
        >
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="comment[text]"
              value="<%= comment.text %>"
              required
            />
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/house">View all houses</a>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %> <%- include('../partials/footerScript') %>
