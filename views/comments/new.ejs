<%- include('../partials/header') %>
<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center p-2">Add new comment to <%= house.title %></h1>
    </div>
    <div class="col-12">
      <div id="form-input">
        <!--30%-->
        <form action="/house/<%= house._id %>/comments" method="POST">
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="comment[text]"
              placeholder="text"
              required
            />
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/house">View all houses</a>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %> <%- include('../partials/footerScript') %>
